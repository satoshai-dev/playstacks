{
  "name": "playstacks-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @satoshai/playstacks build",
    "test": "pnpm --filter @satoshai/playstacks test",
    "test:unit": "pnpm --filter @satoshai/playstacks test:unit",
    "test:e2e:example-zest": "pnpm --filter zest test",
    "test:e2e:example-satoshai": "pnpm --filter satoshai test",
    "test:e2e:test-dapp": "pnpm --filter test-dapp test",
    "lint": "eslint packages/*/src/**/*.ts apps/*/src/**/*.ts apps/*/tests/**/*.ts examples/**/tests/**/*.ts",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish --provenance",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "typescript-eslint": "^8.55.0"
  }
}
