{
  "name": "@satoshai/playstacks",
  "version": "0.3.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "E2E testing SDK for Stacks blockchain dApps. Playwright + real transactions.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@stacks/network": "^7.2.0",
    "@stacks/transactions": "^7.3.0",
    "@stacks/wallet-sdk": "^7.2.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": false
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^25.2.3",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "stacks",
    "playwright",
    "e2e",
    "testing",
    "blockchain",
    "bitcoin",
    "clarity",
    "wallet",
    "xverse"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/satoshai-dev/playstacks"
  },
  "homepage": "https://github.com/satoshai-dev/playstacks#readme",
  "bugs": {
    "url": "https://github.com/satoshai-dev/playstacks/issues"
  },
  "engines": {
    "node": ">=18"
  }
}
